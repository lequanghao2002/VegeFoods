@*@model IEnumerable<VegeFoods.Models.BD_VegeFoods.Order>*@
@model PagedList.IPagedList<VegeFoods.Models.BD_VegeFoods.Order>
@using PagedList.Mvc;
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row" style="margin-bottom: 15px">
    <form action="~/Admin/Order" method="get">
        <div class="col-lg-3" style="display: inline-block">
            <input type="text" name="nameSearch" value="@ViewBag.nameSearch" class="form-control" placeholder="Enter name..." />
        </div>

        <div class="col-lg-3" style="display: inline-block">
            <input type="text" name="phoneSearch" value="@ViewBag.phoneSearch" class="form-control" placeholder="Enter phone number..." />
        </div>

        <div class="col-lg-3" style="display:inline-block">
            <button type="submit" class="btn btn-outline-dark" style="margin-bottom: 2px">Search</button>
        </div>
    </form>
</div>

<div class="card">
    <table class="table">
        <tr>
            <th>
                Order Code
            </th>
            <th>
                Full Name
            </th>
            @*<th>
                    Email
                </th>*@
            <th>
                Phone Number
            </th>
            <th>
                Address
            </th>
            <th>
                Order Price
            </th>
            <th>
                Order Date
            </th>
            <th>
                Status
            </th>
            @*<th></th>*@
        </tr>

        @foreach (var item in Model)
        {
            var orderDetail = new VegeFoods.Models.CustomerModel.OrderDetailModel();
            var getOrderDetail = orderDetail.getOrderDetailByOrderID(item.ID);

            double price = 0.0;
            foreach (var orderDetailItem in getOrderDetail)
            {
                price += (double)orderDetailItem.Price * (double)orderDetailItem.Quantity;
            }

            <tr>
                <td>
                    <a href="~/Admin/Order/Details?id=@item.ID">#@Html.DisplayFor(modelItem => item.ID)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    $@price
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>*@
            </tr>
        }

    </table>
</div>

<div class="row mt-3">
    <div class="col text-center">
        <div class="block-27">
            <div style="font-size: 20px; display: flex; justify-content: center">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
    </div>
</div>