    <div>
        <h5 class="title-account">ACCOUNT PAGE</h5>
        <p style="color: #000;">Hello, <span style="color: #089b21; ">@Model.FullName</span>&nbsp;</p>
        <ul style="list-style: none; padding:0">
            <li class="item-account @Html.Raw(currentRequest.Contains("CustomerInfo") ? "active" : "")">
                <a style="color: #000" href="~/CustomerAccount/CustomerInfo">Account information</a>
            </li>
            <li class="item-account @Html.Raw(currentRequest.Contains("YourOrder") ? "active" : "")">
                <a style="color: #000" href="~/CustomerAccount/YourOrder">Your order</a>
            </li>
